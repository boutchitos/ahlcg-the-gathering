{
  "name": "ahlcg-the-gathering",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "arch": "pnpm arch:fake_svelte && pnpm arch:gen_diagram && pnpm arch:clean_fake",
    "arch:gen_diagram": "depcruise src --include-only \"^src\" --output-type dot | dot -T svg > dependency-graph.svg ",
    "arch:fake_svelte": "bash -c ./scripts/generate_fake_svelte_dependencies.sh",
    "arch:clean_fake": "bash -c ./scripts/remove_fake_svelte_dependencies.sh",
    "dev": "vite dev",
    "build": "vite build",
    "clean": "rm -rf .svelte-kit/ .vercel",
    "preview": "vite preview",
    "test": "pnpm run test:integration && pnpm run test:unit",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "test:coverage": "vitest run --coverage",
    "test:integration": "playwright test",
    "test:unit": "vitest",
    "ahdb": "pnpm ahdb:cards && pnpm ahdb:packs && pnpm format",
    "ahdb:cards": "curl -X GET https://arkhamdb.com/api/public/cards/ > ./src/gathering/ahdb.cards.json",
    "ahdb:packs": "curl -X GET https://arkhamdb.com/api/public/packs/ > ./src/gathering/PackRepository/ahdb.packs.json"
  },
  "devDependencies": {
    "@playwright/test": "^1.45.1",
    "@sveltejs/adapter-vercel": "^3.1.0",
    "@sveltejs/kit": "^1.30.4",
    "@sveltejs/vite-plugin-svelte": "^2.5.3",
    "@types/node": "^20.14.9",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^1.6.0",
    "autoprefixer": "^10.4.19",
    "dependency-cruiser": "^16.3.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-svelte": "^2.41.0",
    "postcss": "^8.4.39",
    "prettier": "^3.3.2",
    "prettier-plugin-svelte": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "svelte": "^4.2.18",
    "svelte-check": "^3.8.4",
    "tailwindcss": "^3.4.4",
    "tslib": "^2.6.3",
    "typescript": "^5.5.3",
    "vite": "^4.5.3",
    "vitest": "^1.6.0",
    "vitest-mock-extended": "^1.3.1"
  },
  "type": "module"
}
