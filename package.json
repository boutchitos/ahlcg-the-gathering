{
  "name": "ahlcg-the-gathering",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "arch": "depcruise src --include-only \"^src\" --output-type dot | dot -T svg > dependency-graph.svg ",
    "arch:hack_to_be_ran_manually": "find ./src -name '*.svelte' -exec sh -c 'grep import {} | sed s/svelte/svelte.ts/ > {}.ts' \\;",
    "arch:clean": "find ./src -name '*.svelte.ts' -exec rm {} ;",
    "dev": "vite dev",
    "build": "vite build",
    "clean": "rm -rf .svelte-kit/ .vercel",
    "preview": "vite preview",
    "test": "pnpm run test:integration && pnpm run test:unit",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "test:integration": "playwright test",
    "test:unit": "vitest",
    "ahdb:cards": "curl -X GET https://arkhamdb.com/api/public/cards/ > ./src/lib/server/ahdb.cards.json && pnpm format",
    "ahdb:packs": "curl -X GET https://arkhamdb.com/api/public/packs/ > ./src/lib/server/ahdb.packs.json && pnpm format"
  },
  "devDependencies": {
    "@playwright/test": "^1.28.1",
    "@sveltejs/adapter-vercel": "^3.1.0",
    "@sveltejs/kit": "^1.27.4",
    "@sveltejs/vite-plugin-svelte": "^2.5.3",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "autoprefixer": "^10.4.16",
    "dependency-cruiser": "^16.0.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-svelte": "^2.30.0",
    "postcss": "^8.4.32",
    "prettier": "^3.0.0",
    "prettier-plugin-svelte": "^3.1.2",
    "prettier-plugin-tailwindcss": "^0.5.9",
    "svelte": "^4.2.7",
    "svelte-check": "^3.6.0",
    "tailwindcss": "^3.4.0",
    "tslib": "^2.4.1",
    "typescript": "^5.0.0",
    "vite": "^4.4.2",
    "vitest": "^0.32.2"
  },
  "type": "module"
}
